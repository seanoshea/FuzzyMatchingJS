{
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "max-len": "off",
    "no-plusplus": "off",
    "no-bitwise": "off",
    "no-mixed-operators": "off",
    "one-var-declaration-per-line": "off",
    "block-scoped-var": "off",
    "no-redeclare": "off",
    "no-var": "off",
    "vars-on-top": "off",
    "one-var": "off",
    "eqeqeq": "off"
  }
}
